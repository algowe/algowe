@model Algowe.Web.Models.HrPersonModel
    @{
        Layout = "~/Views/Shared/_Layout.cshtml";
    }
<h2>Human Resources Create Page</h2>

@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>New user</legend>
        <div class="editor-label">
            @Html.LabelFor(model => model.Person.FirstName)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Person.FirstName)
        </div>
        <div class="editor-label">
            @Html.LabelFor(model => model.Person.SecondName)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Person.SecondName)
            @Html.ValidationMessageFor(model => model.Person.SecondName)
        </div>
        <div class="editor-label">
            @Html.LabelFor(model => model.Person.LastName)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Person.LastName)
            @Html.ValidationMessageFor(model => model.Person.LastName)
        </div>
        <div class="editor-label">
            @Html.LabelFor(model => model.Person.UniqID)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Person.UniqID)
            @Html.ValidationMessageFor(model => model.Person.UniqID)
        </div>
        <div class="editor-label">
            @Html.LabelFor(model => model.Person.Department)
        </div>
        <div class="editor-field">
            @Html.DropDownListFor(model => model.SelectedDepartment, Model.ModelDepartments)
        </div>
            
        <p>
            <input type="submit" value="Create" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

