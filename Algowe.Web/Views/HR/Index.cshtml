@model IEnumerable<Algowe.Web.Entities.HrPerson>
    @{
        Layout = "~/Views/Shared/_Layout.cshtml";
    }

    <h2>Human Resources Page</h2>

    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
    <table>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SecondName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UniqID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Department)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SecondName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UniqID)
                </td>
                <th>
                    @Html.DisplayFor(model => item.Department.Name)
                </th>

                <td>
                    <!--@Html.ActionLink("Edit", "Edit", new { id = item.Id }) |-->
                    <!--@Html.ActionLink("Details", "Details", new { id = item.Id }) |-->
                    @Html.ActionLink("Delete", "Delete", "HR", new { id = item.Id }, null)
                </td>
            </tr>
        }

    </table>

