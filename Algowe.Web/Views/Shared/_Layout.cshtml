<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/jquery-1.5.1.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/modernizr-1.7.min.js")" type="text/javascript"></script>
    <!--<script src="@Url.Content("~/Scripts/jquery.fix-checkbox-truefalse.js")" type="text/javascript"></script>-->
    <!-- MVC.Controls -->
	@MVC.Controls.MVCControlsScriptManager.Instance.SetUseJqCustom(true, "1.8.2").RegisterScriptsAndStyles()
	<!-- End of MVC.Controls -->
</head>
<body>
    <div class="page">
        <header>
            <div id="title">
                <h1>Algowe</h1>
            </div>
            <div id="logindisplay">
                @Html.Partial("_LogOnPartial")
            </div>
            

            <nav>
                <ul id="menu">
                    @if (Request.IsAuthenticated)
                    {
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("HR", "Index", "HR")</li>
                    <li>@Html.ActionLink("About", "About", "Home")</li>
					<li>@Html.ActionLink("Controls", "Controls", "Controls")</li>
                    }
                </ul>
            </nav>
            

        </header>
        <section id="main">
            @RenderBody()
        </section>
        <footer>
        </footer>
    </div>
</body>
</html>
